<section id="left">

    <div class="patient_info_list">
        <h2 class="fl_name">{{firstName}}</h2>
        <h2 class="fl_name">{{lastName}}</h2>
        <!-- Userimage source: Pixabay, Raphael Silva. https://pixabay.com/fi/users/raphaelsilva-4702998/ -->
        <img title="Profile image" class="userimg" src="assets/img/user.png" alt="This is an image the user.">
        <div class="profile_details_box">
            <ul>
                <li><b>Age: </b> <span id="age">{{age}}</span> years</li><br>
                <li><b>Height: </b> <span id="height">{{height}}</span> cm</li><br>
                <li><b>Weight: </b><span id="weight">{{weight}}</span> kg</li><br>
                <li><b>BMI: </b><span id="bmi">{{bmi}}</span></li><br>
            </ul>
        </div>

        {{!-- <a href=""><button class="edit_profile_button" onclick="openForm">Edit profile</button></a> --}}

        <button class="edit_profile_button" onclick="openFormChangeUserInfo()">Edit profile</button>
        {{!-- <button class="edit_profile_button" onclick="openFormWithParams('editProfileForm')">Edit profile</button>
        --}}
        {{> (changeUserInfo) }}
    </div>
</section>

<section id="right">
    <button title="Download HRV measurements" id="hrv_load">
        <!-- heart_img source: Pixabay, DanXaw. https://pixabay.com/fi/users/danxaw-9189893/ -->
        <img id="heart_img" src="assets/img/heart_ekg.png" alt="Download HRV measurements">
        <br><span>HRV download</span></button>

    <button title="Record how you slept" id="main_function_measure" onclick="openFormSleep()">
        <!-- sleep_img source: Pixabay, Pixel_perfect. https://pixabay.com/fi/users/pixel_perfect-1411206/ -->
        <!-- green_light_img source: Pixabay, OpenClipart-Vectors. https://pixabay.com/fi/users/openclipart-vectors-30363/ -->
        <img id="sleep_img" src="assets/img/sleep.png" alt="Sleep meter">
        <br><span>Sleep meter<img title="You have saved results for today." class="light_img" id="sleep_meter_light"
                src="assets/img/red_light.png" alt="Sleep meter. Green light. Measured today."></span></button>

    {{> (sleepMeter) }}

    <button title="Record your current mood" id="main_function_measure" onclick="openFormMood()">
        <!-- mood_img source: Pixabay, Clker-Free-Vector-Images. https://pixabay.com/fi/users/clker-free-vector-images-3736/ -->
        <!-- green_light_img source: Pixabay, OpenClipart-Vectors. https://pixabay.com/fi/users/openclipart-vectors-30363/ -->
        <img id="mood_img" src="assets/img/emotions.png" alt="Mood meter.">
        <br><span>Mood meter<img title="You have saved results for today." class="light_img" id="mood_meter_light"
                src="assets/img/red_light.png" alt="Mood meter. Green light. Measured today."></span></button>

    {{> (moodMeter) }}

    <button title="Record your blood pressure measurements" id="main_function_measure" onclick="openFormBP()">
        <!-- blood_pressure_img source: Pixabay, MostafaElTurkey36. https://pixabay.com/fi/users/mostafaelturkey36-13328910/ -->
        <!-- red_light_img source: Pixabay, OpenClipart-Vectors. https://pixabay.com/fi/users/openclipart-vectors-30363/ -->
        <img id="blood_pressure_img" src="assets/img/blood_pressure.png" alt="Blood pressure measurements.">
        <br><span>Blood pressure<img title="No saved results for today." class="light_img" id="bloodpressure_meter_light"
                src="assets/img/red_light.png" alt="Blood pressure. red light. Not measured today."></span></button>

    {{> (bloodpressureMeter) }}

    <button title="Evaluate used gadgets" id="main_function_other">
        <!-- oxygen_img source: Pixabay, Clker-Free-Vector-Images. https://pixabay.com/fi/users/clker-free-vector-images-3736/ -->
        <img id="oxygen_img" src="assets/img/oxygen.png" alt="Gadgets to treat sleep apnea and their evaluation.">
        <br><span>Gadgets</span></button>

    <button title="Observe all measurement history and comments from professional" id="main_function_other">
        <a href="/charts">
            <!-- graph_img source: Pixabay, janjf93. https://pixabay.com/fi/users/janjf93-3084263/ -->
            <img id="graph_img" src="assets/img/graph.png" alt="History and analysis of measurements."></a>
        <br><span>History</span></button>

    <button title="Read more about sleep apnea, sleep and health" id="main_function_other">
        <!-- book_img source: Pixabay, Josy_Dom_Alexis. https://pixabay.com/fi/users/josy_dom_alexis-487968/ -->
        <img id="book_img" src="assets/img/book.png" alt="Infobank for people with sleep apnea.">
        <br><span>Infobank</span></button>
</section>