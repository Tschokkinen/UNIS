
<form id="formID" class="form" action="/register" method="POST">
    <h1>Register new user</h1>
    <label for="firstName">First name</label>
    <input tag="INPUT" class="big-input" id="firstName" type="text" name="firstName" placeholder="First name" />

    <label for="lastName">Last name</label>
    <input tag="INPUT" class="big-input" id="lastName" type="text" name="lastName" placeholder="Last name" />

    <label for="email">Email</label>
    <input tag="INPUT" class="big-input"  id="email" type="email" name="email" placeholder="Email" />

    <label for="password">Password</label>
    <input tag="INPUT" class="big-input" id="password" type="password" name="password" placeholder="Password" />
</form>

<button class="button" type="submit" form="formID">Register</button>

<script src="scripts/validateForm.js"></script>