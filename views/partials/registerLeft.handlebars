<a class="back-link" href="/"> <i class="arrow left"></i> <span id="backSignin-arrow-text">BACK</span></a>
                    
<form id="formID" class="form" action="/register" method="POST">
    <h1>Register new user</h1>
    <label for="firstName">First name</label>
    <input tag="INPUT" class="big-input" id="firstName" type="text" name="firstName" placeholder="First name" required/>

    <label for="lastName">Last name</label>
    <input tag="INPUT" class="big-input" id="lastName" type="text" name="lastName" placeholder="Last name" required/>

    <label for="email">Email</label>
    <input tag="INPUT" class="big-input"  id="email" type="email" name="email" placeholder="Email" required/>

    <label for="password" id="passwordLabel">Password</label>
    <input tag="INPUT" class="big-input" id="password" type="password" name="password" placeholder="Password" required/>
</form>

<button class="button narrow button align-center button-register" type="submit" form="formID">Register</button>

<script src="scripts/password_checker.js"></script>
