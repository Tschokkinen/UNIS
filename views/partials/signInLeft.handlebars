<div class="put-in-column">
    <span>UNIS sleep apnea application</span>
    <h1>Sign in</h1>
</div>

<!-- Log in form: Email and password -->
<form id="signin-form" class="form" action="/" method="POST">
    <label for="email">Email</label>
    <input class="big-input" id="email" type="email" name="email" placeholder="Email">

    <label for="password">Password</label>
    <input class="big-input" id="password" type="password" name="password" placeholder="Password" height="100">
</form>

<div class="put-in-column">
    <!-- Log in button -->
    <button class="button" type="submit" form="signin-form">SIGN IN</button>

    <!-- Register button -->
    <form class="form" action="/register" method="GET">
        <button class="button narrow-button align-center" type="submit">Register</button>
    </form>
</div>

<div class="align-center">
    <span>Problems logging in? Click here.</span>
</div>