<div class="put-in-column">
    <span class="unis_app_header">UNIS sleep apnea application</span>
    <div class="sign_in_player">
        <h1>Sign in</h1>
        <lottie-player id="loadingAnim" class="loading_anim" src="https://assets10.lottiefiles.com/packages/lf20_fyye8szy.json" background="transparent"  speed="1"  style="width: 300px; height: 90px;" loop autoplay></lottie-player>
    </div>
</div>

<!-- Log in form: Email and password -->
<form id="formID" class="form" action="/" method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <label for="email">Email</label>
    <input class="big-input" id="email" type="email" name="email" placeholder="Email" required>

    <label for="password">Password</label>
    <input class="big-input" id="password" type="password" name="password" placeholder="Password" required>
</form><br>

<div class="put-in-column">
    <!-- Log in button -->
    <button class="button" type="submit" form="formID" onclick="loagingAnimation()">SIGN IN</button><br>
    <!-- Register button -->
    <form class="form" action="/register" method="GET">
        <button class="button narrow-button align-center" type="submit">Register</button><br>
    </form>
</div>

<div id="snackbar_signInError">Wrong password or email</div>

<div class="align-center problems-logging-in-link">
    <span>Problems signing in? <a href="">Click here.</a></span>
</div>

